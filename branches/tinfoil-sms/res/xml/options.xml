	<PreferenceCategory 
	    android:key="encryption_category" 
	    android:title="Encryption Settings">
		
		<CheckBoxPreference 
		    android:title="Encrypted Messages" 
		    android:key="showEncrypt" 
		    android:summary="Display the original encrypted message"
		    android:defaultValue="false" />
		
		<PreferenceScreen 
            android:title="My Public Key" 
            android:key="public_key"
            android:summary="Manage your public key">
			
			<intent
             		android:action="android.intent.action.VIEW"
             		android:targetPackage="com.tinfoil.sms"
             		android:targetClass="com.tinfoil.sms.settings.UserKeySettings" />
        </PreferenceScreen>
	</PreferenceCategory>
    
    <PreferenceCategory 
        android:key="notification_category" 
        android:title="Notification Settings">
        <CheckBoxPreference 
            android:title="Enable Notifications" 
            android:key="notification_bar"
            android:defaultValue="true"/>
        <CheckBoxPreference 
            android:title="Vibrate" 
            android:key="vibrate"
            android:defaultValue="true"/>
        <EditTextPreference 
            android:key="vibrate_length"
            android:title="Vibrate Length" 
            android:summary="Select the length of vibration notification" 
            android:defaultValue="500"
            android:inputType="number" />
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="Feedback"
        android:key="feedback_category">
        
        <CheckBoxPreference
            android:key="bugsense_enable"
		    android:title="@string/pref_enable_bugsense"
		    android:summaryOn="@string/pref_bugsense_enabled"
		    android:summaryOff="@string/pref_bugsense_disabled"
		    android:defaultValue="true"/>
        
          <PreferenceScreen 
            android:title="Donate"
            android:key="donate"
            android:summary="Support the developers">
			
			<intent
				android:action="android.intent.action.VIEW"
				android:targetPackage="com.tinfoil.sms"
				android:targetClass="com.tinfoil.sms.settings.DonationsActivity" />
        </PreferenceScreen>  
	</PreferenceCategory>
    
	
</PreferenceScreen>
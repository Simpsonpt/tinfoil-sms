<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tinfoil.sms"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:allowClearUserData="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".sms.TinfoilSMS"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sms.SendMessageActivity"
            android:label="@string/send_message"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".settings.AddContact"
            android:label="@string/add_contact_activity" />
        <activity
            android:name=".settings.QuickPrefsActivity"
            android:label="@string/settings" />
        <activity
            android:name=".settings.ManageContactsActivity"
            android:configChanges="orientation"
            android:label="@string/manage_contacts" />
        <activity
            android:name=".sms.MessageView"
            android:label="@string/message"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".settings.ImportContacts"
            android:configChanges="orientation"
            android:label="@string/import_contacts" />
        <activity
            android:name=".settings.EditNumber"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/edit_number" />
        <activity
            android:name=".settings.RemoveContactsActivity"
            android:configChanges="orientation"
            android:label="@string/delete_contacts" />
        <activity
            android:name=".sms.ConversationView"
            android:configChanges="orientation"
            android:label="@string/app_name" >
        </activity>

        <receiver android:name=".utility.MessageReceiver" >
            <intent-filter android:priority="1000" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".utility.MessageService" />

        <activity
            android:name=".sms.KeyExchangeManager"
            android:label="@string/key_exchange_manager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sms.ConversationView" />
        </activity>
        
        <activity
            android:name=".settings.UserKeySettings"
            android:label="@string/user_key_settings" >
        </activity>
    </application>

</manifest>